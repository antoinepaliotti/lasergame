{% extends "layout.html.twig" %}

{% block page_title %}
    Accueil
{% endblock %}

{% block content %}

{% if is_granted('IS_AUTHENTICATED_FULLY') %}

<h1>Bienvenue sur le site du laser game {{ app.user.username }}</h1>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{path('admin_management')}}">Accéder à l'interface de management</a>
        <br>
    {% endif %}


    {% if is_granted('ROLE_EMPLOYEE') %}
        <a href="{{path('customer_management')}}">Accéder au module de gestion des clients</a>
        <br>
    {% endif %}


    {% if is_granted('ROLE_EMPLOYEE') %}
    {% else %}
        <a href="{{path('espace_client')}}">Accéder à votre espace client<br></a>
    {% endif %}


    <a href="{{path('security_logout')}}">Se déconnecter</a>
<hr>

{% else %}
    {% if success is defined %}
        <p style="color:gold;">{{ success }}</p>
    {% endif %}

    <a href="{{path('security_login')}}">
        Veuillez vous connecter
    </a>
    ou
    <a href="{{path('user_register')}}">Vous inscrire</a>
{%  endif %}


{% endblock %}